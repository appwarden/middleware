{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "moduleResolution": "Bundler",
    "types": ["@cloudflare/workers-types", "@cloudflare/vitest-pool-workers"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
